ADD UNIQUE INDEX `descripcion_UNIQUE` (`descripcion` ASC) VISIBLE;
;

-- -----------------------------------------------------------------------------------------------------------------
-- -------------------------------------------- Tabla Ubicaciones --------------------------------------------------

CREATE TABLE `ubicaciones` (
  `id_ubicacion` int NOT NULL auto_increment,
  `posicion` varchar(45) DEFAULT NULL,
  PRIMARY KEY (`id_ubicacion`)
);
