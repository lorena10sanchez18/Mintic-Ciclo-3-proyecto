-- --------------------------------------- Creación de la base de datos --------------------------------------------
-- -----------------------------------------------------------------------------------------------------------------
-- -------------------------------------------- Tabla Motivos ------------------------------------------------------

CREATE TABLE `motivos` (
  `id_motivo` int NOT NULL auto_increment,
  `descripcion` varchar(45) DEFAULT NULL,
  PRIMARY KEY (`id_motivo`)
);
-- DROP TABLE motivos;
SELECT * FROM motivos;
